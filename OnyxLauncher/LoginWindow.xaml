        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnyxPlatform"
        mc:Ignorable="d"
        Title="Onyx Platform: Login" Height="250" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" FontFamily="Segoe UI" FontSize="12" Foreground="White" Background="#303030" Loaded="Window_Loaded">
