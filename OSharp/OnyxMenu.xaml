<Window x:Class="OSharp.OnyxMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSharp"
        mc:Ignorable="d"
        Title="Menu" Height="Auto" MinHeight="50" MaxHeight="434" Width="Auto" MinWidth="244" MaxWidth="260" WindowStartupLocation="CenterOwner" Background="{DynamicResource GeneralBackground}" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ControlAppearanceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource OnyxFlatButton}">
                <Setter Property="BorderBrush" Value="#3F3F3F"/>
                <Setter Property="MinWidth" Value="76"/>
                <Setter Property="Width" Value="116"/>
                <Setter Property="Height" Value="26"/>
                <Setter Property="Margin" Value="4 4 0 0"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <WrapPanel Width="Auto" Height="Auto" x:Name="ButtonContainer">
        </WrapPanel>
    </Grid>
</Window>
