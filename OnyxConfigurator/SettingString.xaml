<UserControl x:Class="OnyxConfigurator.SettingString"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnyxConfigurator"
             mc:Ignorable="d" Margin="2" x:Name="settingstr">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Content="{Binding ElementName=settingstr, Path=Title}" Foreground="White" Grid.Column="0"/>
        <ComboBox Grid.Column="1" Width="100"/>
    </Grid>
</UserControl>
